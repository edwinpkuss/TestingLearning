<?xml version="1.0" encoding="UTF-8"?>  
<configuration status="OFF">  
  <appenders>  
    <Console name="Console" target="SYSTEM_OUT">  
      <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} %-5p [%c:%L] - %m%n"/>  
    </Console>  
  </appenders>  
